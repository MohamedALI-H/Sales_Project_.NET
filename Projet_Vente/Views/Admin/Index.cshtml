@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Bienvenue, Admin!</h2>
    <p class="text-center mb-4">Merci de vous connecter au tableau de bord d'administration.</p>

    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4 mb-3">
            <a class="btn btn-primary btn-block" asp-controller="Admin" asp-action="Users">Voir les utilisateurs</a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-3">
            <a class="btn btn-primary btn-block" asp-controller="Admin" asp-action="Items">Voir les articles</a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-3">
            <a class="btn btn-primary btn-block" asp-controller="Orders" asp-action="Index">Voir les commandes</a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-3">
            <a class="btn btn-primary btn-block" asp-controller="Admin" asp-action="IndexCategory">Voir les catégories</a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-3">
            <a class="btn btn-primary btn-block" asp-controller="Admin" asp-action="dashboard">dashboard</a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-3">
            <a class="btn btn-primary btn-block" asp-controller="Admin" asp-action="listRoles">Liste des Roles</a>
        </div>
    </div>
</div>
