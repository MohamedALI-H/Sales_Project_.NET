@model IEnumerable<Projet_Vente.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">User List</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@(user.Roles != null && user.Roles.Any() ? string.Join(", ", user.Roles) : "Client")</td>

                </tr>
            }
        </tbody>
    </table>
</div>
