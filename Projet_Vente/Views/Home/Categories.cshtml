@using Projet_Vente.Models
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <h1>Categories</h1>
  
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody> 
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="CategoryItems" asp-route-id="@category.Id" class="btn btn-info">View Items</a>
                           
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
